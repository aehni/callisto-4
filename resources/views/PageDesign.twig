<!DOCTYPE html>

{% set lang = services.sessionStorage.getLang() %}

<html lang="{{ lang }}" data-framework="vue">

    <head>
        {% include "PluginCallisto::PageDesign.Head" %}
    </head>

    <body>

        <div class="wrapper wrapper-top">
            <!-- messages -->
            <notifications></notifications>
        </div>

        <div class="wrapper wrapper-left">
          <!-- filters -->
        </div>

        <div class="wrapper wrapper-main">

            {% include "PluginCallisto::PageDesign.Header" %}
            {% include "PluginCallisto::VueConfig" %}

            <div class="main" id="page-body">
                {% block PageBody %}
                    <!-- inject content of inherited templates here -->
                {% endblock %}
            </div>

            {% include "PluginCallisto::PageDesign.Footer" %}
        </div>

        <div class="wrapper wrapper-right">
          <basket-preview base-url="{{ app.request.baseUrl }}" basket-data="{{ services.basket.getBasket()|json_encode() }}"></basket-preview>
        </div>

        <div class="wrapper wrapper-bottom">
            <!-- eventually messages -->

            <!-- LOGIN MODAL -->
            {% include "PluginCallisto::Templates.Login.LoginModal" %}

            <!-- Register Modal -->
            {% include "PluginCallisto::Templates.Registration.SimpleRegistrationModal" %}

            <div id="bsModal" class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" aria-label="Close">
                                <span id="bsModalCloseButton" aria-hidden="true">&times;</span>
                            </button>
                            <h4 id="bsModalHeadline" class="modal-title"></h4>
                        </div>

                        <div id="bsModalBody" class="modal-body"></div>

                        <div id="bsModalFooter" class="modal-footer">
                            <button id="bsModalCloseButtonFooter" type="button" class="btn btn-secondary">Schlie√üen</button>
                            <button id="bsModalExecuteButton" type="button" class="btn btn-primary"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% include "PluginCallisto::Templates.Main" %}

        <script src="{{ plugin_path('PluginCallisto') }}/js/dist/plugin-callisto-vendor.js"></script>
        <script src="{{ plugin_path('PluginCallisto') }}/js/src/app.config.js"></script>
        <script src="{{ plugin_path('PluginCallisto') }}/js/dist/plugin-callisto-app.js"></script>

        <!-- <script src="{{ plugin_path('PluginCallisto') }}/js/src/libraries/shariff.complete.js"></script> -->

        {# for path in frontend.file.jsFiles %}
            <script src="{{ path }}"></script>
        { endfor #}
    </body>
</html>
